@model IEnumerable<RamboScrum.Models.Person>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Scrum Team <small>Member List</small></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email)
                    </th>
                    <th class="text-center">
                        Option
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.first_name + " " + item.last_name, "Details", "People", new { id = item.person_id }, new { @class = "btn rambo" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.person_id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.person_id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>

            <p>
                @Html.ActionLink("New Member", "Create", null, new { @class = "btn btn-primary" })
            </p>
        </div>
    </div>

    </div>
